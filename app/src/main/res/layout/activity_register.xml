<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
   >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:id="@+id/progress_register"
            android:background="@drawable/round_icon_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            gpb:type="nexus_rotation_cross"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:context="com.src.Module.Register.view.RegisterActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarRegister"
                app:navigationIcon="@drawable/ic_keyboard_backspace_24dp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"/>

            <TextView
                android:text="Tạo tài khoản mới"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin30"
                android:textColor="@color/colorPink"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailRegister"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:hint="Địa chỉ email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUserNameRegister"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:hint="Tên người dùng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPhoneRegister"
                android:inputType="phone"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:hint="Số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPasswordRegister"
                android:layout_marginTop="@dimen/margin30"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:hint="Mật khẩu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin30"
                android:background="@color/colorPink"
                android:text="Đăng kí"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>
