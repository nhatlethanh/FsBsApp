<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    tools:context="com.fsbs.src.module.home.view.ProductDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.chabbal.slidingdotsplash.SlidingSplashView
                android:id="@+id/introProductDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </com.chabbal.slidingdotsplash.SlidingSplashView>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient_black_transparent" />

            <ImageView
                android:id="@+id/imgBackProductDetails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin10"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <ImageView
                android:id="@+id/imgFavouriteProductDetails"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/margin10"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <TextView
                android:id="@+id/txtNameProductDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Sản phẩm"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_30" />


        </FrameLayout>

        <LinearLayout
            android:id="@+id/bodyProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/custom_border_login"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:ellipsize="end"
                android:text="Mô tả"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Mô tả"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btnOrderNowDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="4"
                    android:layout_marginLeft="75dp"
                    android:background="@color/colorBlack"
                    android:text="Thêm vào giỏ hàng"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_20" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtWriteComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Viết đánh giá"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:id="@+id/layoutWriteComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rateBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30"
                android:numStars="5" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/margin30"
                android:background="@drawable/custom_edittext_round"
                android:hint="@string/write_comment" />

            <Button
                android:id="@+id/btnSubmitComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin20"
                android:background="@drawable/custom_round_button"
                android:paddingLeft="@dimen/margin20"
                android:paddingRight="@dimen/margin20"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin30"
            android:text="* Đánh giá của người dùng *"

            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:id="@+id/progress_review"
            android:visibility="gone"
            android:background="@drawable/round_icon_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            gpb:type="nexus_rotation_cross"/>
        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginBottom="@dimen/margin30"
            android:id="@+id/recyclerReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtNoComment"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="Chưa có đánh giá"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
