<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    tools:context="com.src.Module.Home.view.AllProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin20"
            android:textStyle="bold"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Tất cả sản phẩm"
            android:textColor="@color/colorPink"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_30" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAllProductPaging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10" />




    </LinearLayout>
    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/progress_productAll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin150"
        android:background="@drawable/round_icon_cart"
        android:gravity="center"
        android:visibility="gone"
        gpb:type="folding_circles" />
</FrameLayout>
